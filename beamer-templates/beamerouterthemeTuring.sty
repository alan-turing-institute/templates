\newlength{\blocktitlesize}
\setlength{\blocktitlesize}{\bodytextsize}
\newlength{\blockbodysize}
\setlength{\blockbodysize}{\bodytextsize}

\newlength{\footerfontsize}
\setlength{\footerfontsize}{\basefontsize}

\newcommand{\headinglineheightmultiplier}{1.2}
\newcommand{\bodylineheightmultiplier}{1.4}

\setbeamerfont{title}{series=\bfseries,size={\fontsize{\titlefontsize}{\titlefontsize}}}
\setbeamerfont{subtitle}{size={\fontsize{\subtitlefontsize}{\subtitlefontsize}}}
\setbeamerfont{author}{size={\fontsize{\authorfontsize}{\authorfontsize}}}
\setbeamerfont{frametitle}{series=\bfseries,size={\fontsize{\frametitlesize}{\frametitlesize}}}
\setbeamerfont{imprint}{series=\mdseries,size={\fontsize{\frametitlesize}{\headinglineheightmultiplier\frametitlesize}}}
\setbeamerfont{imprint}{series=\mdseries,size={\fontsize{\frametitlesize}{\headinglineheightmultiplier\frametitlesize}}}
\setbeamerfont{framesubtitle}{series=\bfseries,size={\fontsize{\framesubtitlesize}{\framesubtitlesize}}}
\setbeamerfont{footline}{series=\mdseries,size={\fontsize{\footerfontsize}{\footerfontsize}}}


% 
\setbeamerfont{normal text}{series=\mdseries,size={\fontsize{\blockbodysize}{\bodylineheightmultiplier\blockbodysize}}}
\setbeamerfont{block title}{series=\bfseries,size={\fontsize{\blocktitlesize}{\bodylineheightmultiplier\blocktitlesize}}}
\setbeamerfont{block body}{series=\mdseries,size={\fontsize{\blockbodysize}{\bodylineheightmultiplier\blockbodysize}}}
\setbeamerfont*{block itemize/enumerate body}{size=\fontsize{\blockbodysize}{\bodylineheightmultiplier\blockbodysize}}
\setbeamerfont*{itemize/enumerate subbody}{parent=itemize/enumerate body}
\setbeamerfont*{itemize/enumerate subsubbody}{parent=itemize/enumerate body}

\setbeamertemplate{itemize item}{--}%
\setbeamertemplate{itemize item}{--}%
\setbeamertemplate{itemize subitem}{--}%
\setbeamertemplate{itemize subsubitem}{--}%

\usefonttheme{professionalfonts}

\setbeamertemplate{navigation symbols}{}

\defbeamertemplate{frame numbering}{counter}{\insertframenumber}

