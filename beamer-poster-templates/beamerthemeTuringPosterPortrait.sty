%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Headline definitions
%%%%%%%%%%%%%%%%%%%%%%%%%%%%
\setbeamertemplate{headline}{
	\leavevmode
	\begin{beamercolorbox}[wd=\paperwidth]{headline}
		\begin{columns}[T]
			\begin{column}{.02\paperwidth}
			\end{column}
			\begin{column}{.10\paperwidth}
				\vskip8ex
				\begin{center}
					\begin{flushleft}
						\pgfuseimage{main-logo}
					\end{flushleft}
				\end{center}
			\end{column}
			\begin{column}{.76\paperwidth}
				\vskip8ex
				\begin{center}
					\usebeamercolor{title in headline}{\color{fg}\textbf{\huge{\inserttitle}}\\[5ex]}
					\usebeamercolor{author in headline}{\color{fg}\posterauthor}
				\end{center}
			\end{column}
			\begin{column}{.10\paperwidth}
				\vskip10ex
			\end{column}
			\begin{column}{.02\paperwidth}
			\end{column}
		\end{columns}
		\vskip2ex
	\end{beamercolorbox}
}

